<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/paisTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center"
        android:text="@string/pais"
        android:textSize="@dimen/pais_text_size" />

    <ImageView
        android:id="@+id/flagImageView"
        android:layout_width="@dimen/flag_width_size"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:contentDescription="@string/flag"
        app:srcCompat="@drawable/flag" />

    <ImageView
        android:id="@+id/comidaImageView"
        android:layout_width="@dimen/food_width_size"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:contentDescription="@string/food"
        app:srcCompat="@drawable/comida" />

    <TextView
        android:id="@+id/comidaTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/comida"
        android:textSize="@dimen/food_text_size" />

</LinearLayout>